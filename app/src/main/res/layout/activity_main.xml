<?xml version="1.0" encoding="utf-8"?>
<com.gournet.test.SplitPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    spl:orientation="vertical"
    spl:splitterSize="12dip"
    spl:splitterPosition="50%"
    spl:splitterBackground="@drawable/splitter_bg_v">

    <fragment
        android:id="@+id/map"
        android:name="com.gournet.test.MapsFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.gournet.test.ItemFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_item_list" />

</com.gournet.test.SplitPaneLayout>